<!DOCTYPE html>
<html ng-app="rsApp" ng-controller="mainCtrl">
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="lib/bootstrap-3.0.3-dist/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/rs.css">

</head>

<body>
<div ng-controller="mainDivCtrl" class="container">
    <div class="row">
        <div class="col-md-1">
            <table class="table table-bordered table-condensed">
                <thead>
                <tr><th>Ope</th></tr>
                </thead>
                <tbody>
                <tr ng-repeat="ope in opes" ng-click="getLotsByOpe($index)"
                        ng-class="{danger: $index==selectedOpe}">
                    <td>{{ope}}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-3">
            <table class="table table-bordered table-condensed">
                <thead>
                <tr><th></th><th>Lot ID</th><th>Date time</th></tr>
                </thead>
                <tbody>
                <tr ng-repeat="lot in lots" ng-click="getGlassbyLot($index)">
                    <td>
                        <span ng-class="{'glyphicon glyphicon-chevron-down': $index==selectedLot}"></span>
                    </td>
                    <td>{{lot.short_lot_id}}</td>
                    <td>{{lot.max_date_time}}</td>
                </tr>
                </tbody>
            </table>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Glass ID</th>
                    <th>Oper</th>
                    <th>Date time</th>
                    <th>User</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="glass in glassList">
                    <td>{{lot.short_lot_id}}</td>
                    <td>{{lot.max_date_time}}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-3">
            <div>
                <a href="#" class="thumbnail">
                    <img style="height: 60%; width: 60%; display: block;"
                         src="http://10.10.2.133:82/AOIH/JPG/IMAGE/14P4106601_1420_140116112043_0001.jpg">
                </a>
            </div>
        </div>
        <div class="col-md-5">

        </div>
    </div>

</div>

<script src="lib/angular.min.js"></script>
<script src="lib/jquery/jquery-1.10.2.min.js"></script>
<script src="lib/bootstrap-3.0.3-dist/dist/js/bootstrap.min.js"></script>
<script src="javascripts/rs.js"></script>
</body>
</html>